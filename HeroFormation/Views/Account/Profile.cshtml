@model ProfileViewModel
@using HeroFormation.Interfaces.ServiceInterfaces.ProfileServiceInterfaces
@inject IProfileService ProfileService
@{
    ViewData["Title"] = "Profile";
    ViewBag.isHome = false;
    var user = ProfileService.RetrieveCurrentUser(@User.Identity.Name);
}
<h1 class="titlePageText">@ViewData["Title"]</h1>


@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
<h2 class="badaboomIfy">View Your Superhero Stats</h2>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="SuperHeroName">Superhero Name</label>
                <input asp-for="SuperHeroName" class="form-control" value="@user.SuperHeroName" readonly />
                <span asp-validation-for="SuperHeroName" class="text-warning"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" value="@user.FirstName">
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" value="@user.LastName" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email (Used As Username)</label>
                <input asp-for="Email" type="email" class="form-control" value="@user.Email" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <input asp-for="UserName" type="hidden" class="form-control" value="@user.UserName" />


            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<script>

</script>


