@model CreateViewModel
@{
    ViewBag.Title = "Create Account";
    ViewBag.isHome = false;
 }

@section scripts{
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
<h1>Create Account</h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" type="email" class="form-control" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserName" type="email" class="form-control" />
                <label asp-for="UserName">UserName</label>
                <span asp-validation-for="UserName" class="text-warning"></span>
            </div>
            @*<input asp-for="UserName" type="hidden" class="form-control" value="@Request.Form["Email"]" />*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

